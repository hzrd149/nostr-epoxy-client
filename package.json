{
  "name": "nostr-epoxy-client",
  "version": "0.2.0",
  "description": "A client for using epoxy relays",
  "type": "module",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "author": "hzrd149",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "format": "prettier -w .",
    "docs": "typedoc src/index.ts",
    "dev": "vite serve"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./ws": {
      "import": "./lib/ws.js",
      "types": "./lib/ws.d.ts"
    }
  },
  "devDependencies": {
    "@cashu/cashu-ts": "^1.1.0",
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.3.3",
    "typedoc": "^0.25.12",
    "typescript": "^5.3.3",
    "vite": "^5.4.9"
  },
  "packageManager": "pnpm@9.12.0"
}
